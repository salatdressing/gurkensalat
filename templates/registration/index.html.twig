{% extends 'base.html.twig' %}

{% block title %}Reg!{% endblock %}

{% block body %}
<h1>Registriere dich!</h1>
{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}

    <button type="submit">Registrieren</button>
{{ form_end(form) }}
{% endblock %}
