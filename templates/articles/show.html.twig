{% extends 'base.html.twig' %}

{% block title %}Artikel{% endblock %}

{% block body %}
    <h1>{{ article.articleTitle }}</h1>
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div uk-alert class="uk-alert-{{ label }}">
          <a class="uk-alert-close" uk-close></a>
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}
    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>{{ article.articleTitle }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ article.articleContent }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ article.isFrom }}</td>
            </tr>
        </tbody>
    </table>

    <a class="uk-button uk-button-default my-1" href="{{ path('articles_edit', {'id': article.id}) }}">Diesen Artikel bearbeiten</a>

    {{ include('articles/_delete_form.html.twig') }}
    <br />
    <a class="my-1 uk-button uk-button-text" href="{{ path('articles_index') }}">Zurück zur Übersicht</a>
{% endblock %}
